{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "types": [
      "@typescript-to-lua/language-extensions",
      "lua-types/5.3",
      "war3-types-strict/1.33.0"
    ]
  },
  "include": ["./src/**/*.ts"],
  "tstl": {
    "luaTarget": "5.3",
    "buildMode": "library",
    "noHeader": true,
    "noImplicitSelf": true
  }
}
